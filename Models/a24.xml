<?xml version="1.0"?>

<PropertyList>

  <path>a24.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>coque</object-name>
    <object-name>roueG</object-name>
    <object-name>roueD</object-name>
    <object-name>roueA</object-name>
    <object-name>derive</object-name>
    <object-name>aile</object-name>
    <object-name>moteur</object-name>
    <object-name>bol</object-name>
    <object-name>helice</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>volet</object-name>
    <object-name>direction</object-name>
    <object-name>profondeur</object-name>
    <object-name>flotteurG</object-name>
    <object-name>flotteurD</object-name>
    <object-name>sousflotteurG</object-name>
    <object-name>sousflotteurD</object-name>
    <object-name>axeG</object-name>
    <object-name>axeD</object-name>
    <object-name>axeA</object-name>
    <object-name>pilote</object-name>
    <object-name>gouvernail</object-name>
    <object-name>echappe</object-name>
    <object-name>porteG</object-name>
    <object-name>porteD</object-name>

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
    <object-name>vitreG</object-name>
    <object-name>vitreD</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
    <object-name>vitreG</object-name>
    <object-name>vitreD</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/A24-Viking/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.192 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.321 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>pilote</object-name>
    <condition>
      <greater-than>
        <property>/sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <name>HeliceComplete</name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
  </animation>

  <!-- L'hélice --> 
  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>/engines/engine[0]/rpm</property>
        <value>600.000</value>
      </greater-than>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
        <value>1500.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>/engines/engine[0]/rpm</property>
	<value>1500</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <property>/engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -2.652 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.689 </z-m>
    </center>
    <axis>
      <x> -1.000 </x>
      <y>  0.000 </y>
      <z>  0.000 </z>
    </axis>
  </animation>

  <!-- Gouvernail -->
  <animation>
    <type>rotate</type>
    <object-name>gouvernail</object-name>
    <property>/controls/flight/rudder</property>
    <factor>15</factor>
    <center>
      <x-m>  0.592 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.884 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>/controls/flight/rudder</property>
    <factor>15</factor>
    <axis>
      <x1-m>  2.703 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.453 </z1-m>
      <x2-m>  3.156 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  1.059 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>/controls/flight/elevator</property>
    <factor>10</factor>
    <center>
      <x-m> 3.223 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 1.103 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>/surface-positions/left-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.491 </x-m>
      <y-m> -4.090 </y-m>
      <z-m>  0.495 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>/surface-positions/right-aileron-pos-norm</property>
    <factor>15.0</factor>
    <center>
      <x-m> -0.491 </x-m>
      <y-m>  4.090 </y-m>
      <z-m>  0.495 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>volet</object-name>
    <property>/surface-positions/flap-pos-norm</property>
    <factor>35.0</factor>
    <center>
      <x-m> -0.491 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.442 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rentré de la roue gauche -->
  <animation>
    <type>rotate</type>
    <object-name>axeG</object-name>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>   0.0 </ind>
        <dep> 110.0 </dep>
      </entry>
      <entry>
        <ind> 1.0</ind>
        <dep> 0.0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.572 </x-m>
      <y-m> -0.610 </y-m>
      <z-m> -1.011 </z-m>
    </center>
    <axis>
      <x> -1.0 </x>
      <y>  0.0 </y>
      <z>  0.0 </z>
    </axis>
  </animation>

  <!-- Rentré de la roue droite -->
  <animation>
    <type>rotate</type>
    <object-name>axeD</object-name>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/position-norm</property>
    <interpolation>
      <entry>
        <ind>   0.0 </ind>
        <dep> 110.0 </dep>
      </entry>
      <entry>
        <ind> 1.0</ind>
        <dep> 0.0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -1.572 </x-m>
      <y-m>  0.610 </y-m>
      <z-m> -1.011 </z-m>
    </center>
    <axis>
      <x> 1.0 </x>
      <y> 0.0 </y>
      <z> 0.0 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>roueG</object-name>
    <property>/gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>roueD</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.300 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>roueA</object-name>
    <property>/gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry>
        <ind> 0.0 </ind>
        <dep> 0.0 </dep>
      </entry>
      <entry>
        <ind> 1.000 </ind>
        <dep> 0.030 </dep>
      </entry>
    </interpolation>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

 <!-- Rotation des roues lors du roulage -->
 <animation>
   <type>spin</type>
   <object-name>roueG</object-name>
   <property>/gear/gear[0]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m> -1.572 </x-m>
     <y-m> -0.812 </y-m>
     <z-m> -1.402 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

 <animation>
   <type>spin</type>
   <object-name>roueD</object-name>
   <property>/gear/gear[1]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m> -1.572 </x-m>
     <y-m>  0.812 </y-m>
     <z-m> -1.402 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

 <animation>
   <type>spin</type>
   <object-name>roueA</object-name>
   <property>/gear/gear[2]/rollspeed-ms</property>
   <factor> 30 </factor>
   <center>
     <x-m>  3.190 </x-m>
     <y-m>  0.000 </y-m>
     <z-m> -0.631 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y> -1.000 </y>
     <z>  0.000 </z>
   </axis>
 </animation>

</PropertyList>

