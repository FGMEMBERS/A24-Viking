<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/A24-Viking/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.776 </x-m>
      <y-m> -0.221 </y-m>
      <z-m> -0.616 </z-m>
    </offsets>
  </model>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/A24-Viking/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.192 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.321 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

</PropertyList>

